<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayoutPlayerListItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:gravity="center_vertical"
    tools:context="com.baziiz.gametimer2.MainActivity">
    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"        />
    <TextView
        android:id="@+id/textViewPlayerListItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:text="PLAYER NAME"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dragHandle"/>
    <ImageButton
        android:id="@+id/buttonIconPlayerListItemColor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/buttonIconPlayerListItemDelete"
        android:src="@drawable/ic_action_format_color_fill"
        android:focusable="false"
        android:background="@color/clear"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingRight="16dp"/>
    <ImageButton
        android:id="@+id/buttonIconPlayerListItemDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_remove_circle"
        android:background="@color/clear"
        android:focusable="false"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingRight="16dp"/>

</RelativeLayout>